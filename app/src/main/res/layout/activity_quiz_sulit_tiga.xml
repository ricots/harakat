<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <include android:id="@+id/toolbar" layout="@layout/tool_bar" />
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:src="@drawable/bawa" />
            
            <TextView android:textSize="16dp" 
                android:textStyle="bold" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:text="gambar di atas adalah bacaan.........?" />
            
            <CheckBox android:textSize="16dp"
                android:id="@+id/cek_sulit_tiga_a" 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:layout_marginTop="30px" 
                android:text="A. daza" />
            
            <CheckBox android:textSize="16dp"
                android:id="@+id/cek_sulit_tiga_b"
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:text="b. bata" />
            
            <CheckBox android:textSize="16dp"
                android:id="@+id/cek_sulit_tiga_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C. rama" />
            
            <CheckBox android:textSize="16dp"
                android:id="@+id/cek_sulit_tiga_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D. bawa" />
        </LinearLayout>
        <Button android:id="@+id/btn_next_sulit_tiga"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/PrimaryColor" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="next" />
    </LinearLayout>
</ScrollView>
